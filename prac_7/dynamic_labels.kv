BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'vertical'
        # this layout is populated with Button widgets in app code
        id: entries_box
    Label:
        size_hint_y: 0.3
        text: app.status_text
    BoxLayout:
        orientation: 'horizontal'
        size_hint_y: 0.2

        TextInput:
            id: user_input
            value: ""

        Button:
            text: "Create Widgets"
            on_release: app.add_a_new()

        Button:
            text: "Clear Widgets"
            on_release: app.clear_all()